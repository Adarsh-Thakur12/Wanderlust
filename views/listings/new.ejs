<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Add New Property</h3>
            <form method="post" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter Title of the Property" type="text"
                        class="form-control" required/>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input name="listing[image][url]" palacehoder="Enter image url/link" type="text" class="form-control" />
                </div>
                <div class="row">

                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label" >Price</label>
                        <input name="listing[price]" placeholder="5,000" type="number" class="form-control" required />
                    </div>
                    <div class="mb-3 col-md-8">

                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required/>
                    </div>
                </div>
                <div class="mb-3">

                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Jaipur, Udaipur" type="text" class="form-control" required/>
                </div>
                <button class="btn btn-dark mb-2">Submit</button>
            </form>
        </div>
    </div>